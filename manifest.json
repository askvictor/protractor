{
    "manifest_version": 2,
    "name": "Protractor",
    "version": "0.0.3",
    "description": "Easily measure angles in your browser window.",
    "icons": {
        "16": "images/icon16-on.png",
        "48": "images/icon48-on.png",
        "128":  "images/icon128-on.png"
    },
    "browser_action": {
        "default_title": "Protractor"
    },
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://*/*", "http://*/*", "file:///*"],
        "js": ["scripts/foreground.js", "scripts/ui.js", "scripts/marker.js" ],
        "css": ["style/style.css"]
    }],
    "offline_enabled": true,
    "permissions": ["activeTab"],
    "web_accessible_resources": [
        "images/*.svg"
    ]
}
